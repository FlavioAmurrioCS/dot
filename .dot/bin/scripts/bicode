#!/usr/bin/env bash

function bibin(){
  local bin_name="${1}"
  local mac_name="${2}"
  local linux_name="${3}"

  local bin_path
  bin_path="$(command -v "${bin_name}")"
  if uname -s | grep -q Darwin; then
    bin_path="${bin_path:-${mac_name}}"
  else
    bin_path="${bin_path:-${linux_name}}"
  fi
  "${bin_path}" "$@"
}

